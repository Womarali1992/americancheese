{
  "expo": {
    "name": "SiteSetups",
    "slug": "american",
    "version": "1.1.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "scheme": "sitesetups",
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#2563eb"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.omaranything.american",
      "infoPlist": {
        "NSCameraUsageDescription": "SiteSetups needs camera access to take photos of construction sites and materials.",
        "NSPhotoLibraryUsageDescription": "SiteSetups needs photo library access to attach existing photos to tasks.",
        "NSLocationWhenInUseUsageDescription": "SiteSetups needs location access to track project sites.",
        "ITSAppUsesNonExemptEncryption": false
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#2563eb"
      },
      "package": "com.sitesetups.mobile",
      "edgeToEdgeEnabled": true,
      "permissions": [
        "android.permission.CAMERA",
        "android.permission.ACCESS_FINE_LOCATION",
        "android.permission.ACCESS_COARSE_LOCATION",
        "android.permission.RECORD_AUDIO"
      ]
    },
    "web": {
      "favicon": "./assets/favicon.png",
      "bundler": "metro"
    },
    "plugins": [
      "expo-router",
      "expo-secure-store",
      [
        "expo-build-properties",
        {
          "ios": {
            "newArchEnabled": true
          },
          "android": {
            "newArchEnabled": true
          }
        }
      ],
      [
        "expo-camera",
        {
          "cameraPermission": "Allow SiteSetups to access your camera for site photos."
        }
      ],
      [
        "expo-location",
        {
          "locationWhenInUsePermission": "Allow SiteSetups to access your location to track project sites."
        }
      ],
      "expo-notifications"
    ],
    "extra": {
      "router": {},
      "eas": {
        "projectId": "e03ac115-3824-4514-b931-8cbbb190cfc8"
      }
    }
  }
}
